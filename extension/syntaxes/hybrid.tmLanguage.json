{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Hybrid",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.hybrid",
          "match": "\\b(var|const|block|return|speak)\\b"
        },
        {
          "name": "constant.language.hybrid",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.hybrid",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.hybrid",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.hybrid",
          "begin": "//",
          "end": "$"
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.hybrid",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.hybrid",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.hybrid"
            }
          }
        },
        {
          "name": "keyword.control.hybrid",
          "begin": "\\b(block)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "end": "\\)",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.hybrid"
            },
            "2": {
              "name": "entity.name.function.hybrid"
            }
          },
          "patterns": [
            {
              "name": "variable.parameter.hybrid",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            }
          ]
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.hybrid",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.hybrid",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.assignment.hybrid",
          "match": "="
        }
      ]
    }
  },
  "scopeName": "source.hybrid"
}

