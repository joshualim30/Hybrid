{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Hybrid",
  "patterns": [
    {
      "include": "#mutable-tags"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "mutable-tags": {
      "patterns": [
        {
          "name": "meta.embedded.python.hybrid",
          "begin": "(#python)\\s*$",
          "end": "(?=^\\s*#python|^\\s*#rust|\\z)",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.mutable.python.hybrid"
            }
          },
          "patterns": [
            {
              "include": "#types"
            },
            {
              "include": "#keywords"
            },
            {
              "include": "#strings"
            },
            {
              "include": "#comments"
            },
            {
              "include": "#numbers"
            },
            {
              "include": "#functions"
            },
            {
              "include": "#variables"
            },
            {
              "include": "#operators"
            }
          ]
        },
        {
          "name": "meta.embedded.rust.hybrid",
          "begin": "(#rust)\\s*$",
          "end": "(?=^\\s*#python|^\\s*#rust|\\z)",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.mutable.rust.hybrid"
            }
          },
          "patterns": [
            {
              "include": "#types"
            },
            {
              "include": "#keywords"
            },
            {
              "include": "#strings"
            },
            {
              "include": "#comments"
            },
            {
              "include": "#numbers"
            },
            {
              "include": "#functions"
            },
            {
              "include": "#variables"
            },
            {
              "include": "#operators"
            }
          ]
        },
        {
          "name": "keyword.control.mutable.hybrid",
          "match": "#(python|rust)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.hybrid",
          "match": "\\b(int|float|string|bool|void|null)\\b"
        },
        {
          "name": "storage.type.collection.hybrid",
          "match": "\\b(array|map)\\b"
        },
        {
          "name": "storage.type.hybrid",
          "match": "\\b(array|map)\\s*\\[",
          "captures": {
            "1": {
              "name": "storage.type.collection.hybrid"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.hybrid",
          "match": "\\b(if|else|while|return)\\b"
        },
        {
          "name": "keyword.declaration.hybrid",
          "match": "\\b(var|const|block)\\b"
        },
        {
          "name": "support.function.builtin.hybrid",
          "match": "\\b(speak)\\b"
        },
        {
          "name": "constant.language.boolean.hybrid",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.hybrid",
          "match": "\\b(null)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.hybrid",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.hybrid",
          "match": "\\\\."
        },
        {
          "name": "variable.interpolation.hybrid",
          "match": "\\{[^}]+\\}"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.hybrid",
          "match": "//.*$"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.hybrid",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.hybrid",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.declaration.hybrid",
          "begin": "\\b(block)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "end": "\\)",
          "beginCaptures": {
            "1": {
              "name": "keyword.declaration.hybrid"
            },
            "2": {
              "name": "entity.name.function.hybrid"
            }
          },
          "patterns": [
            {
              "include": "#types"
            },
            {
              "name": "variable.parameter.hybrid",
              "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b"
            },
            {
              "name": "punctuation.separator.hybrid",
              "match": ","
            }
          ]
        },
        {
          "name": "meta.function.call.hybrid",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.hybrid"
            }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "meta.variable.declaration.hybrid",
          "match": "\\b(int|float|string|bool|array|map)\\s+(var|const)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "storage.type.hybrid"
            },
            "2": {
              "name": "keyword.declaration.hybrid"
            },
            "3": {
              "name": "variable.other.hybrid"
            }
          }
        },
        {
          "name": "variable.other.hybrid",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.hybrid",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.comparison.hybrid",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.hybrid",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.assignment.hybrid",
          "match": "="
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.braces.hybrid",
          "match": "[{}]"
        },
        {
          "name": "punctuation.section.brackets.hybrid",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.parens.hybrid",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.hybrid",
          "match": "[:;,]"
        }
      ]
    }
  },
  "scopeName": "source.hybrid"
}