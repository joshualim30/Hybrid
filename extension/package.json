{
  "name": "hybrid-language",
  "displayName": "Hybrid Language Support",
  "description": "Syntax support for Hybrid programming language v0.1.0",
  "version": "0.1.0",
  "publisher": "joshua-lim",
  "author": "Joshua Lim <hi@joshualim.me>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshualim30/hybrid.git"
  },
  "icon": "images/hybrid-logo.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "hybrid",
    "programming language",
    "interpreter",
    "rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hybrid",
        "aliases": [
          "Hybrid",
          "hybrid"
        ],
        "extensions": [
          ".hyb"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hybrid",
        "scopeName": "source.hybrid",
        "path": "./syntaxes/hybrid.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "hybrid.run",
        "title": "Run Hybrid File",
        "category": "Hybrid",
        "icon": "$(play)"
      },
      {
        "command": "hybrid.repl",
        "title": "Open Hybrid REPL",
        "category": "Hybrid",
        "icon": "$(terminal)"
      }
    ],
    "keybindings": [
      {
        "command": "hybrid.run",
        "key": "ctrl+f5",
        "mac": "cmd+f5",
        "when": "editorTextFocus && resourceExtname == .hyb"
      },
      {
        "command": "hybrid.repl",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .hyb",
          "command": "hybrid.run",
          "group": "hybrid@1"
        }
      ],
      "commandPalette": [
        {
          "command": "hybrid.run",
          "when": "editorLangId == hybrid"
        },
        {
          "command": "hybrid.repl"
        }
      ],
      "editor/title": [
        {
          "when": "resourceExtname == .hyb",
          "command": "hybrid.run",
          "group": "navigation"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.104.0",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/joshualim30/hybrid/issues"
  },
  "homepage": "https://github.com/joshualim30/hybrid#readme"
}

