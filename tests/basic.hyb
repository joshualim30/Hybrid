// basic.hyb
// Test file for the Hybrid language v0.1.0

speak("=== Basic Hybrid Language Test ===");

// Test variables
int var x = 10;
int var y = 20;
speak("x =", x);
speak("y =", y);

// Test constants
string const message = "Hello from Hybrid!";
speak(message);

// Test arithmetic
int var sum = x + y;
int var product = x * y;
int var difference = y - x;
int var quotient = y / x;

speak("Sum:", sum);
speak("Product:", product);
speak("Difference:", difference);
speak("Quotient:", quotient);

// Test string concatenation
string var greeting = "The sum is: " + sum;
speak(greeting);

// Test function definition
int block add(int a, int b) {
    return a + b;
}

// Test function call
int var result = add(15, 25);
speak("add(15, 25) =", result);

// Test nested expressions
int var complex = (x + y) * 2 - 5;
speak("(x + y) * 2 - 5 =", complex);

// Test boolean values
bool var isTrue = true;
bool var isFalse = false;
speak("Boolean true:", isTrue);
speak("Boolean false:", isFalse);

speak("=== All tests completed! ===");